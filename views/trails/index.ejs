<%- include('../partials/header') %>
<h2>Trail List</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Difficulty</th>
      <th>Mileage</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% hikingTrails.forEach(trail => { %>
      <tr>
        <td><a href="/trails/hike/<%= trail.id %>"><%= trail.name %></a></td>
        <td><%= trail.difficulty %></td>
        <td><%= trail.mileage %></td>
        <td><%= trail.rating %></td>
        <td><%= trail.trailStyle %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
<%- include('../partials/footer') %>

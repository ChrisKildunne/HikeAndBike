<%- include('../partials/header') %>
<h2>Add a new trail</h2>
<div class = hike-pic>
<% if (urlPath === '/trails/hike/new') { %>
  <form class="hike-trail-form" action="/trails/hike" method="POST"> 
    <label>Trail Name:
      <input type="text" name="name">
    </label>
    <label>Difficulty:</label>
    <select name="difficulty">
      <option value="Easy">Easy</option>
      <option value="Moderate">Moderate</option>
      <option value="Hard">Hard</option>
    </select>
    <label>Distance in Miles:</label>
    <input type="text" name="mileage">
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    <label for="description">Trail Description:</label>
    <textarea id="description" rows="6" cols="50" name="description"></textarea>
    <div class="button-container">
      <button type="submit" value="Add Biking Trail">Add Biking Trail</button>
    </div>
      </form>
<% } %>
</div>
<div class = bike-pic>
<% if (urlPath === '/trails/bike/new') { %>
